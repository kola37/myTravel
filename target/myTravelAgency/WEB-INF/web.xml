<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


  <display-name>My Travel Agency Web Application</display-name>

  <!--Home page-->
  <welcome-file-list>
    <welcome-file>/WEB-INF/view/home.jsp</welcome-file>
  </welcome-file-list>

  <!--Controller-->
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>controller.Controller</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>


  <!--============================================================
      Encoding support filter
  =============================================================-->
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/WEB-INF/view/*</url-pattern>
    <servlet-name>main</servlet-name>
  </filter-mapping>


  <!--============================================================
      Security filter.
      1) admin: admin commands
      2) client: client commands
      3) commons: commands for all roles
      4) out-of-control: commands without access control
      Delimiter - space/tab
  =============================================================-->
